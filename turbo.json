

{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "db:start":{
      "cache": false
    },
    "db:seed":{
      "cache": false
    },
    "db:stop":{
      "cache": false
    },
    "db:generate":{
      "cache": false
    },
    "db:migrate":{
      "cache": false
    }
  }
}
